<header class="header">
	<div class="wrapper">
		<h1>
			Throw an idea at the wall and see if it sticksâ€¦ 
			<a href="#" class="button">throw</a>
		</h1>
	</div>
</header>

<div class="content wrapper">
{{#each posts}}
	<div class="post" data-id="{{this.id}}">
		<h4><a href="/post/{{this.id}}">{{this.title}}</a></h4>
		<p><span class="score">{{this.score}}</span> | <a href="#" class="upvote">upvote</a> | <a href="#" class="downvote">downvote</a> | <a href="/post/{{this.id}}#disqus_thread" data-disqus-identifier="{{this.id}}"></a>  | posted <time class="timeago" datetime="{{this.createdAtISO}}"></time></p>
		<p>{{this.content}}</p>
		<p>by <a href="//twitter.com/{{this.author.username}}" target="_blank">@{{this.author.username}}</a></p>
	</div>
{{/each}}
</div>

